{% block main %}
[package]
name = "carbon-{{ program.name | kebabCase }}-decoder"
version = "0.1.0"
edition = "2021"

[lib]
crate-type = ["rlib"]

[features]
default = []
serde = ["dep:serde", "dep:serde-big-array"]
postgres = [
    "carbon-core/postgres",
    "dep:sqlx",
    "dep:async-trait",
    "dep:sqlx_migrator",
    "serde",
]

[dependencies]
# Core dependencies
carbon-core = { version = "{{ carbonVersion }}", default-features = false }
solana-pubkey = { version = "{{ solanaSdkVersion }}" }
solana-account = { version = "{{ solanaSdkVersion }}" }
solana-instruction = { version = "{{ solanaSdkVersion }}", default-features = false }

# Serialization (optional)
serde = { version = "1.0.219", features = ["derive"], optional = true }
serde-big-array = { version = "0.5.1", optional = true }

# Postgres dependencies (optional)
sqlx = { version = "0.8.6", features = ["postgres", "rust_decimal"], optional = true }
async-trait = { version = "0.1", optional = true }
sqlx_migrator = { version = "0.18.0", optional = true }

[dev-dependencies]
carbon-test-utils = { version = "{{ carbonVersion }}" }

{% endblock %}